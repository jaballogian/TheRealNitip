<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/my_shape"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@color/colorPrimary"
            android:id="@+id/fotoBarangHomes"/>

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:id="@+id/namaBarangHomes"
            android:text="Nama Barang"
            android:textSize="16sp"
            android:textColor="@color/textColorPrimary"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:id="@+id/hargaBarangHomes"
                android:text="Rp. Harga"
                android:textColor="@color/harga"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@color/colorPrimary"
                android:id="@+id/logoJenisNitipHomes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/pemilikBarangHomes"
                android:text="Pemilik"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Nitip"
                android:id="@+id/jenisNitipHomes"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/my_shape">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/tanggalBarangHomes"
                android:text="dd mmm yyyy"
                android:textSize="12sp"
                android:textColor="@color/textColorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/asalKotaHomes"
                android:text="Kota - Negara"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>